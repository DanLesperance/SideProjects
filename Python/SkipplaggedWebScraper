import urllib.request as urllib
from bs4 import BeautifulSoup
import sys
from datetime import datetime
from datetime import timedelta

##Thinking about making this part print out questions for the user
depart = sys.argv[1]
arrive = sys.argv[2]
date_of_travel_input =  sys.argv[3] + " " + sys.argv[4] + " " + sys.argv[5]
length = sys.argv[6]

# Ensure proper formatting for the date
try:
    date_of_travel = datetime.strptime(date_of_travel_input, '%B %d %Y').date()
except ValueError:
    print >> sys.stderr, "Date format should be name of month (November) day and 4 digit year"
    sys.exit()

# gives same date format for the return flight by adding on the number of days you'll be gone
return_flight_date = date_of_travel + timedelta(days=int(length))


# URL address creation
skiplagged_page = "https://skiplagged.com/flights/" + depart + '/' + arrive + '/' + str(date_of_travel) + '/' + \
                  str(return_flight_date)

# Start scraping from html
page = urllib.urlopen(skiplagged_page)

soup = BeautifulSoup(page, 'html.parser')

a=soup.find('section')
print(a.attrs)



